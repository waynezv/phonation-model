{
    "_comment": "==============================",
    "_comment": "Log",
    "verbose": false,
    "log_dir": "./outputs/vocal_tract_estimate/logs/",
    "log_file": "run_0814_",

    "log": {
        "version": 1,
        "disable_existing_loggers": false,

        "formatters": {
            "custom": {
                "format": "%(asctime)s - [%(name)s - %(funcName)-8.8s:%(lineno)-4d] - [%(levelname)-5.5s] - %(message)s",
                "datefmt": "%Y/%m/%d %H:%M"
            }
        },

        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "custom",
                "stream": "ext://sys.stdout"
            },

            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "DEBUG",
                "formatter": "custom",
                "filename": "./outputs/vocal_tract_estimate/logs/run_0814_",
                "maxBytes": 10485760,
                "backupCount": 20,
                "encoding": "utf8"
            }
        },

        "loggers": {
            "main": {
                "level": "DEBUG",
                "handlers": ["console", "file"],
                "propagate": false
            }
        },

        "root": {
            "level": "DEBUG",
            "handlers": []
        }
    }
}
